package aug19;

import java.util.Scanner;

public class A {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
	   int n=sc.nextInt();
	   String a[]=new String[n];
	   for(int i=0;i<n;i++) {
		   a[i]=sc.next();
	   }
	   for(int i=0;i<n;i++) {
		   if(a[i].charAt(i)=='.') {
			   a[i]="B";
		   }
	   }
	   System.out.println("YES");
	   System.out.println();
	   for(int i=0;i<n;i++) {
		   System.out.print(a[i]);
	   }
	}

}
