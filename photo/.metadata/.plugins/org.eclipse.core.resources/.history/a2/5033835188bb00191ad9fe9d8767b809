package aug19;

import java.util.Scanner;

public class A {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
	   int n=sc.nextInt();
       String s=sc.next();
       char a[]=s.toCharArray();
	   for(int i=0;i<n;i++) {
		   if(a[i]=='.') {
			   a[i]='B';
		   }
	   }
	   System.out.println("YES");
	   System.out.println();
	   for(int i=0;i<n;i++) {
		   System.out.print(a[i]);
	   }
	}

}
